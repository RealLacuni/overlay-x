{
  "name": "overlay-x",
  "version": "1.0.1",
  "license": "GNU GPLv3",
  "private": true,
  "main": "main/electron/index.js",
  "author": {
    "name": "Rene Pazitny",
    "email": "renepazitnyeng@gmail.com"
  },
  "description": "overlay-x, a highly customizable overlay intended to be used while browsing and reading.",
  "keywords": [
    "vite",
    "react",
    "electron",
    "typescript",
    "tailwindcss",
    "overlay",
    "photophobia",
    "accessibility"
  ],
  "repository": {
    "url": "https://github.com/RealLacuni/overlay-x.git"
  },
  "productName": "overlay-x",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \" npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron --trace-warnings .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "dist:mac": "npm run build && electron-builder --mac --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "dist:linux": "npm run build && electron-builder --linux --publish=never",
    "pack:mac": "npm run build && electron-builder --dir --mac --publish=never",
    "pack:win": "npm run build && electron-builder --dir --win --publish=never",
    "pack:linux": "npm run build && electron-builder --dir --linux --publish=never",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix"
  },
  "dependencies": {
    "@babel/core": "^7.22.10",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.0.4",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.16.0",
    "update-electron-app": "^3.0.0",
    "vite": "^4.4.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/babel__core": "^7.20.3",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "6.4.0",
    "@typescript-eslint/parser": "6.4.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "8.47.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "playwright": "^1.41.2",
    "postcss": "^8.4.28",
    "prettier": "3.0.2",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "build": {
    "appId": "com.lacuni.overlay-x",
    "files": [
      "dist/**/*",
      "main/**/*",
      "node_modules/**/*",
      "src/**/*",
      "build/**/*",
      "package.json",
      "tsconfig.json",
      "vite.config.ts"
    ],
    "mac": {
      "icon": "icon-512.png",
      "artifactName": "overlay-x.${ext}",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "icon-512.png",
      "artifactName": "overlay-x.${ext}",
      "asar": true,
      "target": [
        "portable"
      ]
    },
    "linux": {
      "icon": "icon-512.png",
      "artifactName": "overlay-x.${ext}",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "publishConfig": {
    "provider": "github",
    "owner": "RealLacuni",
    "repo": "overlay-x",
    "releaseType": "release"
  },
  "release": {
    "branches": [
      "main"
    ],
    "tagFormat": "v${version}",
    "plugins": [
      "@semantic-release/git",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*"
            },
            {
              "path": "CHANGELOG.md"
            }
          ]
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ]
    ]
  }
}